{% extends 'base.html.twig' %}

{% block body %}
    <h1>Article</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ article.createdAt|date('d-m-Y') }}</td>
            </tr>
            <tr>
                <th>Datemodif</th>
                <td>{{ article.updatedAt|date('d-m-Y') }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.content }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_article_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_article_edit', { 'id': article.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('admin_article_delete', {'id': article.id}) }}">
                Supprimer
            </a>
        </li>
    </ul>
{% endblock %}
