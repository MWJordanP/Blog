{% extends 'base.html.twig' %}

{% block body %}
    <h1>Articles list</h1>

    <table>
        <thead>
        <tr>
            <th>Titre</th>
            <th>Date</th>
            <th>Datemodif</th>
            <th>Contenu</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.createdAt|date('d-m-Y') }}</td>
                <td>{{ article.updatedAt|date('d-m-Y') }}</td>
                <td>{{ article.content }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_article_show', { 'id': article.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_article_edit', { 'id': article.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_article_create') }}">Create a new article</a>
        </li>
    </ul>
{% endblock %}
